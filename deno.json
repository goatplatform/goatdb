{
  "workspace": ["./docs"],
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "dom.asynciterable", "deno.ns"]
  },
  "lock": false,
  "publish": {
    "exclude": [
      "package.json",
      "tsup.config.ts",
      "tsconfig.node.json",
      ".npmrc",
      ".github/",
      "tests/",
      "benchmarks/",
      "docs/",
      "examples/"
    ]
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "singleQuote": true,
    "exclude": [
      "benchmarks/browser/assets/",
      "system-assets/bloom_filter.js",
      "external/"
    ]
  },
  "name": "@goatdb/goatdb",
  "version": "0.5.1-rc.0",
  "license": "MIT",
  "exports": {
    ".": "./mod.ts",
    "./react": "./react/hooks.ts",
    "./server": "./server.ts",
    "./server/build": "./server-build.ts",
    "./init": "./cli/init.ts",
    "./link": "./cli/link.ts"
  },
  "tasks": {
    "build": "deno run -A system-assets/build-sys-assets.ts",
    "test": "deno run -A tests/run.ts",
    "test:smoke": "deno run -A tests/run.ts --runtime=deno --suite=SecurityBoundaries",
    "bench": "deno run -A benchmarks/run.ts",
    "docs:api": "deno run -A docs/docs-api-build.ts",
    "docs:clean": "rm -rf docs/node_modules docs/.docusaurus docs/build docs/package-lock.json docs/api-docs",
    "docs:serve": "deno run -A docs/docs-api-build.ts && deno run -A docs/docs-build.ts serve",
    "docs:build": "deno run -A docs/docs-api-build.ts && deno run -A docs/docs-build.ts build"
  },
  "imports": {
    "@goatdb/orderstamp": "jsr:@goatdb/orderstamp@^1.1.1",
    "@luca/esbuild-deno-loader": "jsr:@luca/esbuild-deno-loader@^0.11.1",
    "@std/data-structures": "jsr:@std/data-structures@^1.0.8",
    "@std/expect": "jsr:@std/expect@^1.0.16",
    "@std/path": "jsr:@std/path@^1.0.9",
    "@std/encoding": "jsr:@std/encoding@^1.0.10",
    "@types/nodemailer": "npm:@types/nodemailer@^6.4.17",
    "esbuild": "npm:esbuild@^0.25.4",
    "nodemailer": "npm:nodemailer@^6.10.0",
    "playwright": "npm:playwright@^1.48.0",
    "react": "npm:react@^19.1.0",
    "source-map": "npm:source-map@^0.7.4",
    "sql.js": "npm:sql.js@^1.11.0",
    "yargs": "npm:yargs@^17.7.2"
  },
  "nodeModulesDir": "auto"
}
